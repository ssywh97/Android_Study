<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우왁굳 팬 가입하기"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="@font/hssff"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="홍길동" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호" />

    <EditText
        android:id="@+id/etPnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="xxx-xxxx-xxxx"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="팬 활동 열심히 하시겠습니까?" />

    <RadioGroup
        android:id="@+id/Rgroup1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <RadioButton
            android:id="@+id/Yes"
            android:text="예! 충성을 다하겠습니다."
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/No"
            android:text="음....아니요 그닥..."
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="활동 각오 한마디" />

    <EditText
        android:id="@+id/etDeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="가입하기" />

</LinearLayout>